<div class="text-center">
  <h2>{{title}}</h2>
  <p>By {{user.name}} on {{format_date date_created}}</p>
  <p>
    {{content}}
  </p>
  <p>
    <button class="btn btn-primary">Leave a Comment</button>
  </p>
</div>

{{#each comments as |comment|}}
<div>
    <h3>{{comment.user.name}} commented on {{format_date comment.date_created}}</h3>
    <p>
        {{comment.content}}
    </p>
</div>
{{/each}};
